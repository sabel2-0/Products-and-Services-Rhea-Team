<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="NEXT HORIZON - Premium Running Gear. Engineered for Performance. Built for Runners.">
    <meta name="theme-color" content="#000000">
    <title>@ViewData["Title"] - NEXT HORIZON</title>
    
    <!-- Preconnect for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Premium Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Styles -->
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <!-- Unified Header -->
    <header id="main-header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <h1>NEXT HORIZON</h1>
                </div>
                
                <nav class="main-nav">
                    <a href="/" class="nav-link active">Home</a>
                    <a href="/Home/Shop" class="nav-link">Shop</a>
                    <a href="/Home/About" class="nav-link">About</a>
                    <a href="/Home/Contact" class="nav-link">Contact</a>
                </nav>
                
                <div class="header-actions">
                    <a href="/Home/Cart" class="cart-btn" aria-label="Shopping Cart">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="9" cy="21" r="1"></circle>
                            <circle cx="20" cy="21" r="1"></circle>
                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                        </svg>
                        <span id="cart-count">0</span>
                    </a>
                    <a href="/Home/Wishlist" class="wishlist-btn" aria-label="Wishlist">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                        </svg>
                        <span id="wishlist-count">0</span>
                    </a>
                    <button class="login-btn" onclick="openLoginModal()">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Reviews Modal -->
    <div id="reviews-modal" class="modal" role="dialog" aria-labelledby="reviews-title" aria-modal="true">
        <div class="modal-content reviews-modal-content">
            <div class="modal-header">
                <h2 id="reviews-title">Customer Reviews</h2>
                <button class="close-btn" onclick="closeReviewsModal()" aria-label="Close reviews">&times;</button>
            </div>
            <div class="reviews-modal-body">
                <div class="reviews-grid" id="all-reviews-grid"></div>
            </div>
        </div>
    </div>

    <!-- Login Modal -->
    <div id="login-modal" class="modal" role="dialog" aria-labelledby="login-title" aria-modal="true">
        <div class="modal-content login-modal">
            <button class="modal-close-floating" onclick="closeLoginModal()" aria-label="Close">&times;</button>
            <div class="login-content">
                <h2 id="login-title">Welcome Back</h2>
                <p class="login-subtitle">Sign in to your account</p>
                <form class="login-form" onsubmit="handleLogin(event)">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" placeholder="Enter your email" autocomplete="username" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" placeholder="Enter your password" autocomplete="current-password" required>
                    </div>
                    <button type="submit" class="login-submit">Sign In</button>
                </form>
                <p class="login-footer">Don't have an account? <a href="#" onclick="toggleRegister()">Sign Up</a></p>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div id="toast-container" class="toast-container" aria-live="polite"></div>

    <!-- Site Footer -->
    <footer class="site-footer">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-brand">
                    <div class="footer-logo">NEXT HORIZON</div>
                    <p>Engineered for Performance.<br>Built for Runners.</p>
                </div>
                <div class="footer-links">
                    <h4>Shop</h4>
                    <a href="/Home/Shop">All Products</a>
                    <a href="/Home/Shop">Men</a>
                    <a href="/Home/Shop">Women</a>
                </div>
                <div class="footer-links">
                    <h4>Company</h4>
                    <a href="/Home/About">About Us</a>
                    <a href="/Home/Contact">Contact</a>
                </div>
                <div class="footer-links">
                    <h4>Support</h4>
                    <a href="/Home/Contact">Help Center</a>
                    <a href="/Home/Contact">Returns</a>
                    <a href="/Home/Contact">Shipping</a>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2026 NEXT HORIZON. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/js/app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
